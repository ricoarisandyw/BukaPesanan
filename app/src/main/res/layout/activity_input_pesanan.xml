<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adiputra.bukapesanan.InputPesananActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/colorToolbar"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:id="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:theme="@style/styleButton"
                android:id="@+id/btnBack"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_arrow_back_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form Input Pesanan"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/textBlack"
                android:layout_toRightOf="@+id/btnBack"
                android:layout_centerVertical="true"
                />

            <ImageButton
                android:id="@+id/btnMenuInputPesanan"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:theme="@style/styleButton"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_below="@+id/toolbar"
        >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvNamaPesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pesanan : "
            android:textSize="@dimen/textBlack"
            android:textColor="@color/textBlack"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etNamaPesanan"
            android:layout_below="@+id/tvNamaPesanan"
            android:textColorHint="@color/textHint"
            android:layout_width="match_parent"
            android:textSize="@dimen/textInput"
            android:textColor="@color/textBukaLapak"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvKategori"
            android:layout_below="@+id/etNamaPesanan"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori : "
            android:textSize="@dimen/textBlack"
            android:textColor="@color/textBlack"/>

        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerKategori"
            android:textSize="@dimen/textInput"
            android:textColor="@color/textBukaLapak"
            android:layout_below="@+id/tvKategori"
            android:textColorHint="@color/textHint"
            >
        </android.support.v7.widget.AppCompatSpinner>

        <!--<android.support.design.widget.TextInputEditText-->
        <!--android:id="@+id/etKategori"-->
        <!--android:textSize="@dimen/textInput"-->
        <!--android:textColor="@color/textBukaLapak"-->
        <!--android:layout_below="@+id/tvKategori"-->
        <!--android:textColorHint="@color/textHint"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvDeskripsi"
            android:layout_below="@+id/spinnerKategori"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi : "
            android:textSize="@dimen/textBlack"
            android:textColor="@color/textBlack"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etDeskripsi"
            android:textSize="@dimen/textInput"
            android:textColor="@color/textBukaLapak"
            android:layout_below="@+id/tvDeskripsi"
            android:textColorHint="@color/textHint"
            android:layout_width="match_parent"
            android:gravity="start"
            android:layout_height="@dimen/_100sdp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvGambar"
            android:layout_below="@+id/etDeskripsi"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan Gambar Produk : "
            android:textSize="@dimen/textBlack"
            android:textColor="@color/textBlack"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnBrowse"
            android:text="Browse..."
            android:layout_below="@+id/tvGambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSubmitPesanan"
            android:text="Submit"
            android:textStyle="bold"
            android:theme="@style/styleButton"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/textBlack"
            android:layout_below="@+id/btnBrowse"
            android:layout_width="match_parent"
            android:padding="@dimen/_10sdp"
            android:layout_height="@dimen/_50sdp" />

    </RelativeLayout>



</RelativeLayout>
